<?xml version="1.0" ?>
<sdf version="1.6">
  <model name="ackermann_vehicle">
    
    <!-- Base link (chassis) -->
    <link name="base_link">
      <pose>0 0 0.2 0 0 0</pose>
      <inertial>
        <mass>30.0</mass>
        <inertia>
          <ixx>1.0</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>2.5</iyy>
          <iyz>0</iyz>
          <izz>3.0</izz>
        </inertia>
      </inertial>

      <!-- Chassis visual -->
      <visual name="chassis_visual">
        <geometry>
          <box>
            <size>2.0 1.0 0.4</size>
          </box>
        </geometry>
        <material>
          <ambient>0.1 0.5 0.1 1.0</ambient>
          <diffuse>0.1 0.7 0.1 1.0</diffuse>
          <specular>0.5 0.5 0.5 1.0</specular>
        </material>
      </visual>

      <!-- Chassis collision -->
      <collision name="chassis_collision">
        <geometry>
          <box>
            <size>2.0 1.0 0.4</size>
          </box>
        </geometry>
      </collision>

      <!-- GPS Sensor -->
      <sensor name="gps_sensor" type="navsat">
        <pose>0 0 0.3 0 0 0</pose>
        <always_on>true</always_on>
        <update_rate>10</update_rate>
        <topic>/mavros/global_position/global</topic>
        <navsat>
          <position_sensing>
            <horizontal>
              <noise type="gaussian">
                <mean>0.0</mean>
                <stddev>2e-4</stddev>
              </noise>
            </horizontal>
            <vertical>
              <noise type="gaussian">
                <mean>0.0</mean>
                <stddev>2e-4</stddev>
              </noise>
            </vertical>
          </position_sensing>
        </navsat>
      </sensor>

      <!-- IMU Sensor -->
      <sensor name="imu_sensor" type="imu">
        <pose>0 0 0.3 0 0 0</pose>
        <always_on>true</always_on>
        <update_rate>100</update_rate>
        <topic>/imu/data</topic>
      </sensor>

      <!-- LiDAR Sensor -->
      <sensor name="lidar_sensor" type="gpu_lidar">
        <pose>0 0 0.5 0 0 0</pose>
        <topic>/lidar</topic>
        <update_rate>10</update_rate>
        <lidar>
          <scan>
            <horizontal>
              <samples>640</samples>
              <resolution>1</resolution>
              <min_angle>-3.14159</min_angle>
              <max_angle>3.14159</max_angle>
            </horizontal>
          </scan>
          <range>
            <min>0.1</min>
            <max>30.0</max>
            <resolution>0.01</resolution>
          </range>
        </lidar>
        <always_on>1</always_on>
        <visualize>true</visualize>
      </sensor>
    </link>

    <!-- Front Left Wheel -->
    <link name="front_left_wheel">
      <pose>0.6 0.55 0.2 -1.5707 0 0</pose>
      <inertial>
        <mass>3.0</mass>
        <inertia>
          <ixx>0.015</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>0.015</iyy>
          <iyz>0</iyz>
          <izz>0.025</izz>
        </inertia>
      </inertial>
      <visual name="visual">
        <geometry>
          <cylinder>
            <radius>0.15</radius>
            <length>0.1</length>
          </cylinder>
        </geometry>
        <material>
          <ambient>0.1 0.1 0.1 1</ambient>
          <diffuse>0.2 0.2 0.2 1</diffuse>
        </material>
      </visual>
      <collision name="collision">
        <geometry>
          <cylinder>
            <radius>0.15</radius>
            <length>0.1</length>
          </cylinder>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>1.0</mu>
              <mu2>1.0</mu2>
            </ode>
          </friction>
        </surface>
      </collision>
    </link>

    <!-- Front Right Wheel -->
    <link name="front_right_wheel">
      <pose>0.6 -0.55 0.2 -1.5707 0 0</pose>
      <inertial>
        <mass>3.0</mass>
        <inertia>
          <ixx>0.015</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>0.015</iyy>
          <iyz>0</iyz>
          <izz>0.025</izz>
        </inertia>
      </inertial>
      <visual name="visual">
        <geometry>
          <cylinder>
            <radius>0.15</radius>
            <length>0.1</length>
          </cylinder>
        </geometry>
        <material>
          <ambient>0.1 0.1 0.1 1</ambient>
          <diffuse>0.2 0.2 0.2 1</diffuse>
        </material>
      </visual>
      <collision name="collision">
        <geometry>
          <cylinder>
            <radius>0.15</radius>
            <length>0.1</length>
          </cylinder>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>1.0</mu>
              <mu2>1.0</mu2>
            </ode>
          </friction>
        </surface>
      </collision>
    </link>

    <!-- Rear Left Wheel -->
    <link name="rear_left_wheel">
      <pose>-0.6 0.55 0.2 -1.5707 0 0</pose>
      <inertial>
        <mass>3.0</mass>
        <inertia>
          <ixx>0.015</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>0.015</iyy>
          <iyz>0</iyz>
          <izz>0.025</izz>
        </inertia>
      </inertial>
      <visual name="visual">
        <geometry>
          <cylinder>
            <radius>0.15</radius>
            <length>0.1</length>
          </cylinder>
        </geometry>
        <material>
          <ambient>0.1 0.1 0.1 1</ambient>
          <diffuse>0.2 0.2 0.2 1</diffuse>
        </material>
      </visual>
      <collision name="collision">
        <geometry>
          <cylinder>
            <radius>0.15</radius>
            <length>0.1</length>
          </cylinder>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>1.0</mu>
              <mu2>1.0</mu2>
            </ode>
          </friction>
        </surface>
      </collision>
    </link>

    <!-- Rear Right Wheel -->
    <link name="rear_right_wheel">
      <pose>-0.6 -0.55 0.2 -1.5707 0 0</pose>
      <inertial>
        <mass>3.0</mass>
        <inertia>
          <ixx>0.015</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>0.015</iyy>
          <iyz>0</iyz>
          <izz>0.025</izz>
        </inertia>
      </inertial>
      <visual name="visual">
        <geometry>
          <cylinder>
            <radius>0.15</radius>
            <length>0.1</length>
          </cylinder>
        </geometry>
        <material>
          <ambient>0.1 0.1 0.1 1</ambient>
          <diffuse>0.2 0.2 0.2 1</diffuse>
        </material>
      </visual>
      <collision name="collision">
        <geometry>
          <cylinder>
            <radius>0.15</radius>
            <length>0.1</length>
          </cylinder>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>1.0</mu>
              <mu2>1.0</mu2>
            </ode>
          </friction>
        </surface>
      </collision>
    </link>

    <!-- Front Left Steering Knuckle (connects chassis to wheel) -->
    <link name="front_left_steering">
      <pose>0.6 0.55 0.2 0 0 0</pose>
      <inertial>
        <mass>1.0</mass>
        <inertia>
          <ixx>0.01</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>0.01</iyy>
          <iyz>0</iyz>
          <izz>0.01</izz>
        </inertia>
      </inertial>
    </link>

    <!-- Front Right Steering Knuckle -->
    <link name="front_right_steering">
      <pose>0.6 -0.55 0.2 0 0 0</pose>
      <inertial>
        <mass>1.0</mass>
        <inertia>
          <ixx>0.01</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>0.01</iyy>
          <iyz>0</iyz>
          <izz>0.01</izz>
        </inertia>
      </inertial>
    </link>

    <!-- Front Left Steering Joint (chassis to steering knuckle) -->
    <joint name="front_left_steer_joint" type="revolute">
      <parent>base_link</parent>
      <child>front_left_steering</child>
      <pose>0 0 0 0 0 0</pose>
      <axis>
        <xyz>0 0 1</xyz>
        <limit>
          <lower>-0.7</lower>
          <upper>0.7</upper>
        </limit>
        <dynamics>
          <damping>0.5</damping>
        </dynamics>
      </axis>
    </joint>

    <!-- Front Right Steering Joint -->
    <joint name="front_right_steer_joint" type="revolute">
      <parent>base_link</parent>
      <child>front_right_steering</child>
      <pose>0 0 0 0 0 0</pose>
      <axis>
        <xyz>0 0 1</xyz>
        <limit>
          <lower>-0.7</lower>
          <upper>0.7</upper>
        </limit>
        <dynamics>
          <damping>0.5</damping>
        </dynamics>
      </axis>
    </joint>

    <!-- Front Left Wheel Joint (steering knuckle to wheel) -->
    <joint name="front_left_wheel_joint" type="revolute">
      <parent>front_left_steering</parent>
      <child>front_left_wheel</child>
      <axis>
        <xyz>0 1 0</xyz>
        <limit>
          <lower>-1e16</lower>
          <upper>1e16</upper>
        </limit>
      </axis>
    </joint>

    <!-- Front Right Wheel Joint -->
    <joint name="front_right_wheel_joint" type="revolute">
      <parent>front_right_steering</parent>
      <child>front_right_wheel</child>
      <axis>
        <xyz>0 1 0</xyz>
        <limit>
          <lower>-1e16</lower>
          <upper>1e16</upper>
        </limit>
      </axis>
    </joint>

    <!-- Rear Left Wheel Joint -->
    <joint name="rear_left_wheel_joint" type="revolute">
      <parent>base_link</parent>
      <child>rear_left_wheel</child>
      <axis>
        <xyz>0 1 0</xyz>
        <limit>
          <lower>-1e16</lower>
          <upper>1e16</upper>
        </limit>
      </axis>
    </joint>

    <!-- Rear Right Wheel Joint -->
    <joint name="rear_right_wheel_joint" type="revolute">
      <parent>base_link</parent>
      <child>rear_right_wheel</child>
      <axis>
        <xyz>0 1 0</xyz>
        <limit>
          <lower>-1e16</lower>
          <upper>1e16</upper>
        </limit>
      </axis>
    </joint>

    <!-- Rear Wheel Drive (Differential Drive on rear wheels only) -->
    <plugin filename="ignition-gazebo-diff-drive-system" name="ignition::gazebo::systems::DiffDrive">
      <left_joint>rear_left_wheel_joint</left_joint>
      <right_joint>rear_right_wheel_joint</right_joint>
      <wheel_separation>1.1</wheel_separation>
      <wheel_radius>0.15</wheel_radius>
      <max_linear_acceleration>5.0</max_linear_acceleration>
      <min_linear_acceleration>-5.0</min_linear_acceleration>
      <max_angular_acceleration>3.0</max_angular_acceleration>
      <min_angular_acceleration>-3.0</min_angular_acceleration>
      <max_linear_velocity>10.0</max_linear_velocity>
      <min_linear_velocity>-10.0</min_linear_velocity>
      <max_angular_velocity>2.0</max_angular_velocity>
      <min_angular_velocity>-2.0</min_angular_velocity>
      <topic>/cmd_vel</topic>
      <odom_topic>/odom</odom_topic>
      <frame_id>odom</frame_id>
      <child_frame_id>base_link</child_frame_id>
    </plugin>

    <!-- Steering Control (Front Left Wheel) -->
    <plugin filename="ignition-gazebo-joint-position-controller-system" name="ignition::gazebo::systems::JointPositionController">
      <joint_name>front_left_steer_joint</joint_name>
      <topic>/steering/front_left</topic>
      <p_gain>10</p_gain>
      <i_gain>0.5</i_gain>
      <d_gain>0.1</d_gain>
      <i_max>1</i_max>
      <i_min>-1</i_min>
      <cmd_max>100</cmd_max>
      <cmd_min>-100</cmd_min>
    </plugin>

    <!-- Steering Control (Front Right Wheel) -->
    <plugin filename="ignition-gazebo-joint-position-controller-system" name="ignition::gazebo::systems::JointPositionController">
      <joint_name>front_right_steer_joint</joint_name>
      <topic>/steering/front_right</topic>
      <p_gain>10</p_gain>
      <i_gain>0.5</i_gain>
      <d_gain>0.1</d_gain>
      <i_max>1</i_max>
      <i_min>-1</i_min>
      <cmd_max>100</cmd_max>
      <cmd_min>-100</cmd_min>
    </plugin>

  </model>
</sdf>
